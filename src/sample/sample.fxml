<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.Image?>


<?import javafx.scene.control.ScrollPane?>
<VBox onKeyReleased="#keyPressedRemove" onKeyPressed="#keyPressedAdd" fx:controller="sample.SampleController" stylesheets="/sample/sample.css" minWidth="Infinity" minHeight="Infinity" xmlns:fx="http://javafx.com/fxml/1" >
    <MenuBar id="MenuBar" minWidth = "800"   GridPane.rowIndex="0">
        <Menu   text="File" >
            <MenuItem text="Open..." onAction="#ChooseAFile"/>
            <MenuItem text="Save as..." onAction="#saveAFile"/>
            <Menu text="Others">
                <MenuItem text="Hello ! I was hidden !"/>
            </Menu>

        </Menu>
    </MenuBar>
    <HBox >
        <GridPane minWidth="200" hgap="10"  vgap="10"  >

            <Button GridPane.rowIndex="0" onAction="#Switcher" text="Zooming Example" />
            <Button GridPane.rowIndex="1"  onAction="#redGradient" text="Red Gradient" />
            <Button GridPane.rowIndex="2"  onAction="#greenGradient" text="Green Gradient" />
            <Button GridPane.rowIndex="3"  onAction="#blueGradient" text="Blue Gradient" />
            <Button GridPane.rowIndex="4"  onAction="#Switcher" text="Resizing" />
            <Label  GridPane.rowIndex="5" fx:id="helloWorld" />
            <Label  GridPane.rowIndex="6" >Percentage Of Width</Label>
            <Slider value="50" fx:id="mySlider" GridPane.rowIndex="7" majorTickUnit="100" showTickLabels="true" showTickMarks="true"  minorTickCount="5"/>
            <Button GridPane.rowIndex="8"  onAction="#createCropImage" text="Crop image" />
        </GridPane>
        <StackPane maxWidth="1300" maxHeight="980" styleClass="paneOfImage" >
            <ImageView onMouseClicked="#imageClicked" StackPane.alignment="CENTER"  HBox.hgrow="SOMETIMES"  fx:id="myImage" fitWidth="1000" fitHeight="850" preserveRatio="true" >

            </ImageView>
        </StackPane>
    </HBox>
</VBox>
